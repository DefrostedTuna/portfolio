.global {
	text-align: center;
}


.field {
	text-align: center;
	/padding: 10px;
} 

label {
	display: block;
}

form {
	padding: 10px;
	/font-size: 1.2em;
}

form label {
	/padding: 5px;
}

form input {
	border: none;
	padding: 5px;
	margin-bottom: 20px;
	box-shadow: 2px 2px 3px black;
	border-radius: 5px;
}

.errors {
	color: red;
	font-weight: bold;
}

.auto-bg {
	display: inline-block;
}

.center {
	width: auto;
    float: none;
    margin-left: auto;
    margin-right: auto;
    text-align: center;
}

#alert {
	box-shadow: 1px 1px 5px black;
}

.content {
	text-align: left;
	margin: 10px;
	padding: 10px;
	background: url('../img/textBG.png');
	box-shadow: 1px 1px 5px;
    border-radius: 5px; 
}

.right-gap-lg {
	margin-right: 150px;
}

.right-gap-md {
	margin-right: 80px;
}

.left-gap {
	margin-left: 40px;
}

.center-text {
	text-align: center;
}

.auto-margin {
	float: none !important;
	margin: 0 auto;
	display: table;
}

.navbar-shift-left {
	padding-left: -122px;
}

.navbar-shift-right {
	padding-right: 122px;
}

h1, h2, h3, h4, h5 {
	margin-top: 5px !important;
}

.content-no-margin {
	text-align: left;
	padding: 10px;
	background: url('../img/textBG.png');
	box-shadow: 1px 1px 5px;
    border-radius: 5px; 
}

