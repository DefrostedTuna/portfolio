body {
	background: url('../img/bodyBG.png');
}

.header { /* The one that stretches all the way across the browser */
    /*--positioning--*/
    position: relative;
    width: 100%;
    height: auto;
    /*--styling--*/
    background: url(../img/headerBG.png);
    box-shadow: 1px 3px 7px;
}

.header hr {
    color: black;
    box-shadow: 2px 2px 3px;
}

.header h1 {
    font-size: 3.5em;
}

.header p {
    font-size: 2em;
    text-align: right;
}

.headWrap {
    /*--positioning--*/
    max-width: 1100px;
    margin: 0 auto;
    margin-bottom: 5px;
    padding: 10px;
    /*--styling--*/
    color: #A55D35; /* RUST for text color */
    text-shadow: 2px 2px 2px black;
}

